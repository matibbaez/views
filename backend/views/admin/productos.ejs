<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Gestión de Productos</title>
  <link rel="stylesheet" href="/css/admin.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <div class="logo">
    <img src="/img/ViewsLogo.png" alt="Logo Views">
  </div>
  <h1>Productos</h1>

  <a href="/admin/dashboard">← Volver al dashboard</a>
  <a href="/admin/productos/nuevo">+ Agregar producto</a>

  <% if (productos.length === 0) { %>
    <p>No hay productos cargados aún.</p>
  <% } else { %>
    <table border="1" cellpadding="8">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Tipo</th>
          <th>Artista</th>
          <th>Precio</th>
          <th>Activo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach(prod => { %>
          <tr>
            <td><%= prod.nombre %></td>
            <td><%= prod.tipo %></td>
            <td><%= prod.artista %></td>
            <td>$<%= prod.precio %></td>
            <td><%= prod.activo ? 'Sí' : 'No' %></td>
            <td>
              <a href="/admin/productos/<%= prod.id %>/editar" class="btn">Editar</a>

              <form action="/admin/productos/<%= prod.id %>/eliminar" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-secundario">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <script>
    document.querySelectorAll('form[method="POST"]').forEach(form => {
      form.addEventListener('submit', function(e) {
        e.preventDefault(); // Evita el envío por ahora

        Swal.fire({
          title: '¿Estás seguro?',
          text: "Esta acción no se puede deshacer.",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#d33',
          cancelButtonColor: '#aaa',
          confirmButtonText: 'Sí, eliminar',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            form.submit(); // Envía el formulario si confirma
          }
        });
      });
    });
  </script>
</body>
</html>

